# ================================
# DEVELOPMENT DOCKERFILE
# Optimized for hot reload with mounted volumes
# Security-hardened for development environment
# ================================

FROM node:20-alpine

# Security: Add metadata labels
LABEL maintainer="Library Team" \
      org.opencontainers.image.title="Library API (Development)" \
      org.opencontainers.image.description="Development image for Library API"

# Security: Update packages and install build dependencies
# Note: python3, make, g++ needed for native module compilation
# su-exec is used by entrypoint to drop privileges after fixing permissions
RUN apk update && \
    apk upgrade --no-cache && \
    apk add --no-cache python3 make g++ su-exec && \
    rm -rf /var/cache/apk/*

# Security: Create non-root user with specific UID/GID
# Using same UID as production for consistency
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs -h /home/nodejs -s /sbin/nologin

WORKDIR /app

# Install dependencies first (will be overwritten by volume mount in development)
# This ensures node_modules exists for initial container startup
COPY --chown=nodejs:nodejs package*.json ./

# Security: Install as root first, then fix ownership
RUN npm install && \
    # Install tsx globally for TypeScript execution with hot reload
    npm install -g tsx && \
    # Clean npm cache to reduce image size
    npm cache clean --force

# Security: Create necessary directories with proper ownership
RUN mkdir -p /app/src /app/node_modules/.vite/vitest /app/tmp && \
    chown -R nodejs:nodejs /app

# Copy entrypoint script
COPY --chmod=755 docker/entrypoint.dev.sh /usr/local/bin/entrypoint.sh

# Environment variables
ENV NODE_ENV=development \
    PORT=3000 \
    # Security: Disable npm update check
    NPM_CONFIG_UPDATE_NOTIFIER=false \
    # Development: Enable source maps
    NODE_OPTIONS="--enable-source-maps"

# Expose API port
EXPOSE 3000

# Note: We do NOT switch to nodejs user here because:
# 1. The entrypoint runs as root to fix volume permissions
# 2. Then drops privileges to nodejs using su-exec
# This is required because the node_modules volume mount happens at runtime

# Note: Source code will be mounted as volume from docker-compose
# The volume mount will override any COPY commands for src/

# Health check for development
HEALTHCHECK --interval=60s --timeout=5s --start-period=30s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1))" || exit 1

# Security: Use entrypoint to fix permissions then drop to nodejs user
ENTRYPOINT ["entrypoint.sh"]

# Security: Use exec form to avoid shell injection and ensure proper signal handling
# Uses tsx watch for hot reload
CMD ["tsx", "watch", "--clear-screen=false", "src/server.ts"]
